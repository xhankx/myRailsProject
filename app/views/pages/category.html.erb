<div class="category-container">
  <div class="category-header">
    <h1><%= @category %> Recipes</h1>
    <a href="<%= recipes_path %>" class="btn btn-secondary">
      <i class="fas fa-arrow-left"></i> Back to All Recipes
    </a>
  </div>

  <div class="recipes-grid">
    <% @recipes.each do |recipe| %>
      <div class="recipe-card">
        <a href="<%= recipe_path(recipe) %>" class="recipe-link">
          <div class="recipe-image" style="background-image: url('<%= recipe.image_url %>');">
            <div class="cooking-time">
              <i class="far fa-clock"></i> <%= recipe.cooking_time %> min
            </div>
          </div>

          <div class="recipe-content">
            <h3><%= recipe.title %></h3>

            <div class="recipe-info">
              <span class="info-item">
                <i class="fas fa-utensils"></i> <%= recipe.dietary_labels %>
              </span>
            </div>

            <div class="recipe-ingredients">
              <strong>Ingredients:</strong>
              <p><%= truncate(recipe.ingredients_list, length: 150) %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>

  <div class="pagination">
    <%= paginate @recipes, window: 2 %>
  </div>
</div>

<style>
  .category-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .category-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .category-header h1 {
    color: #333;
    margin: 0;
    font-size: 2rem;
  }

  .recipes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .recipe-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background: white;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .recipe-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }

  .recipe-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .recipe-image {
    height: 200px;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .cooking-time {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 0.9rem;
  }

  .recipe-content {
    padding: 1.5rem;
  }

  .recipe-content h3 {
    margin: 0 0 1rem 0;
    color: #333;
    font-size: 1.2rem;
    line-height: 1.3;
  }

  .recipe-info {
    margin-bottom: 1rem;
    color: #666;
  }

  .info-item {
    display: inline-block;
    margin-right: 1rem;
  }

  .recipe-ingredients {
    font-size: 0.9rem;
    color: #666;
  }

  .recipe-ingredients p {
    margin: 0.5rem 0 0 0;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn-secondary {
    background-color: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .pagination a, .pagination span {
    padding: 0.5rem 1rem;
    margin: 0 0.25rem;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    color: #007bff;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .pagination a:hover {
    background-color: #e9ecef;
    color: #0056b3;
  }

  .pagination .current {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
  }

  .pagination .disabled {
    color: #6c757d;
    pointer-events: none;
    background-color: #fff;
  }

  @media (max-width: 768px) {
    .category-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .recipes-grid {
      grid-template-columns: 1fr;
    }

    .pagination {
      flex-wrap: wrap;
    }

    .pagination a, .pagination span {
      padding: 0.4rem 0.8rem;
      font-size: 0.9rem;
    }
  }
</style>