<div class="recipes-container">
  <h1>Our Recipe Collection</h1>

  <div class="search-container">
    <%= form_with(url: recipes_path, method: :get, class: "search-form") do |f| %>
      <div class="search-input-group">
        <%= f.text_field :search,
            value: params[:search],
            placeholder: "Search recipes by title, ingredients, or dietary labels...",
            class: "search-input" %>
        <%= f.submit "Search", class: "search-button" %>
      </div>
    <% end %>
  </div>

  <div class="category-filters">
    <h2>Browse by Category</h2>
    <div class="category-buttons">
      <% categories = ['Beef', 'Chicken', 'Dessert', 'Lamb', 'Miscellaneous', 'Pasta', 'Pork', 'Seafood', 'Side', 'Starter', 'Vegan', 'Vegetarian', 'Breakfast', 'Goat'] %>
      <% categories.each do |category| %>
        <a href="<%= category_path(category) %>" class="category-btn">
          <i class="fas fa-tag"></i> <%= category %>
        </a>
      <% end %>
    </div>
  </div>

  <div class="recipes-grid">
    <% @recipes.each do |recipe| %>
      <div class="recipe-card">
        <a href="<%= recipe_path(recipe) %>" class="recipe-link">
          <div class="recipe-image" style="background-image: url('<%= recipe.image_url %>');">
            <div class="cooking-time">
              <i class="far fa-clock"></i> <%= recipe.cooking_time %> min
            </div>
          </div>

          <div class="recipe-content">
            <h3><%= recipe.title %></h3>

            <div class="recipe-info">
              <span class="info-item">
                <i class="fas fa-utensils"></i> <%= recipe.dietary_labels %>
              </span>
            </div>

            <div class="recipe-ingredients">
              <strong>Ingredients:</strong>
              <p><%= truncate(recipe.ingredients_list, length: 150) %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>

  <div class="pagination">
    <%= paginate @recipes, window: 2 %>
  </div>
</div>

<style>
  .recipes-container {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    text-align: center;
    color: #333;
    margin-bottom: 2rem;
  }

  .category-filters {
    margin-bottom: 3rem;
    text-align: center;
  }

  .category-filters h2 {
    color: #333;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .category-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }

  .category-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: #e9ecef;
    color: #495057;
    border-radius: 20px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .category-btn:hover {
    background-color: #dee2e6;
    color: #212529;
    transform: translateY(-2px);
  }

  .recipes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .recipe-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background: white;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .recipe-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }

  .recipe-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .recipe-image {
    height: 200px;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .cooking-time {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 0.9rem;
  }

  .recipe-content {
    padding: 1.5rem;
  }

  .recipe-content h3 {
    margin: 0 0 1rem 0;
    color: #333;
    font-size: 1.2rem;
    line-height: 1.3;
  }

  .recipe-info {
    margin-bottom: 1rem;
    color: #666;
  }

  .info-item {
    display: inline-block;
    margin-right: 1rem;
  }

  .recipe-ingredients {
    font-size: 0.9rem;
    color: #666;
  }

  .recipe-ingredients p {
    margin: 0.5rem 0 0 0;
  }

  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .pagination a, .pagination span {
    padding: 0.5rem 1rem;
    margin: 0 0.25rem;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    color: #007bff;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .pagination a:hover {
    background-color: #e9ecef;
    color: #0056b3;
  }

  .pagination .current {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
  }

  .pagination .disabled {
    color: #6c757d;
    pointer-events: none;
    background-color: #fff;
  }

  .search-container {
    margin-bottom: 2rem;
  }

  .search-form {
    max-width: 600px;
    margin: 0 auto;
  }

  .search-input-group {
    display: flex;
    gap: 0.5rem;
  }

  .search-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 2px solid #dee2e6;
    border-radius: 4px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  .search-input:focus {
    outline: none;
    border-color: #007bff;
  }

  .search-button {
    padding: 0.75rem 1.5rem;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .search-button:hover {
    background-color: #0056b3;
  }

  @media (max-width: 768px) {
    .recipes-grid {
      grid-template-columns: 1fr;
    }

    .category-buttons {
      gap: 0.5rem;
    }

    .category-btn {
      padding: 0.4rem 0.8rem;
      font-size: 0.8rem;
    }

    .pagination {
      flex-wrap: wrap;
    }

    .pagination a, .pagination span {
      padding: 0.4rem 0.8rem;
      font-size: 0.9rem;
    }

    .search-input-group {
      flex-direction: column;
    }

    .search-button {
      width: 100%;
    }
  }
</style>