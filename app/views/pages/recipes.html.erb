<div class="recipes-container">
  <h1>Our Recipe Collection</h1>

  <div class="recipes-grid">
    <% @recipes.each do |recipe| %>
      <div class="recipe-card">
        <a href="<%= recipe_path(recipe) %>" class="recipe-link">
          <div class="recipe-image" style="background-image: url('<%= recipe.image_url %>');">
            <div class="cooking-time">
              <i class="far fa-clock"></i> <%= recipe.cooking_time %> min
            </div>
          </div>

          <div class="recipe-content">
            <h3><%= recipe.title %></h3>

            <div class="recipe-info">
              <span class="info-item">
                <i class="fas fa-utensils"></i> <%= recipe.dietary_labels %>
              </span>
            </div>

            <div class="recipe-ingredients">
              <strong>Ingredients:</strong>
              <p><%= truncate(recipe.ingredients_list, length: 150) %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>

<style>
  .recipes-container {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    text-align: center;
    color: #333;
    margin-bottom: 2rem;
  }

  .recipes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .recipe-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background: white;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .recipe-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }

  .recipe-image {
    height: 200px;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .cooking-time {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 0.9rem;
  }

  .recipe-content {
    padding: 1.5rem;
  }

  .recipe-content h3 {
    margin: 0 0 1rem 0;
    color: #333;
    font-size: 1.2rem;
    line-height: 1.3;
  }

  .recipe-info {
    margin-bottom: 1rem;
    color: #666;
  }

  .info-item {
    display: inline-block;
    margin-right: 1rem;
  }

  .recipe-ingredients {
    font-size: 0.9rem;
    color: #666;
  }

  .recipe-ingredients p {
    margin: 0.5rem 0 0 0;
  }

  @media (max-width: 768px) {
    .recipes-grid {
      grid-template-columns: 1fr;
    }
  }

  .recipe-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .recipe-card {
    cursor: pointer;
  }
</style>